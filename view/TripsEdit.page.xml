<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.2.xsd"
      no-conversation-view-id="/TripsList.xhtml"
      login-required="true">

   <begin-conversation join="true" flush-mode="MANUAL"/>

   <action execute="#{tripHome.wire}"/>

   <param name="tripEditFrom"/>
   <param name="routeEditFrom"/>
   <param name="routeDashboardFrom"/>

   <param name="tripsFrom"/>
   <param name="agencyId" value="#{agencyHome.agencyAgencyId}"/>
   <param name="routeId" value="#{routeHome.routeRouteId}"/>
   <param name="calendarId" value="#{calendarHome.calendarCalendarId}"/>
   <param name="blockId" value="#{blockHome.blockBlockId}"/>
   <param name="tripId" value="#{tripHome.tripTripId}"/>


   <navigation from-action="#{tripHome.persist}">
      <rule if-outcome="persisted">
         <end-conversation/>
         <redirect view-id="/#{empty tripEditFrom ? 'TripsList' : tripEditFrom}.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{tripHome.update}">
      <rule if-outcome="updated">
         <end-conversation/>
         <redirect view-id="/#{empty tripEditFrom ? 'TripsList' : tripEditFrom}.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{tripHome.remove}">
      <rule if-outcome="removed">
         <end-conversation/>
         <redirect view-id="/#{empty tripEditFrom ? 'TripsList' : tripEditFrom}.xhtml"/>
      </rule>
   </navigation>

</page>
